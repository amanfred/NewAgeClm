@model NewAgeClm.Models.ProjectTypes

@{
	ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">
	Delete project type
</h2>

<form method="post" asp-action="Delete">
	<div class="p-4 border rounded">
				
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Name"></label>
			</div>
			<div class="col-5">
				<input asp-for="Name" disabled readonly class="form-control" />
			</div>			
		</div>
		<br />
		<!--add two buttons-->
		<div class="form-group">
			<input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" /> 
			<a asp-action="Index" asp-area="Admin" class="btn btn-success">Project types list</a>
			<a asp-action="Index" asp-area="Admin" asp-controller="ProjectAttributes" class="btn btn-success">Project attributes list</a>
		</div>
	</div>
</form>

