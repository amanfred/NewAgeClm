@model NewAgeClm.Models.ControllerWIthId

<td style="width:150px">
	<div class="btn-group" role="group">
		<a asp-controller="@Model.ControllerName" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
			<i class="far fa-edit"></i>
		</a>
		@if (Model.ShowDetails)
		{
			<a asp-controller="@Model.ControllerName" class="btn btn-success" asp-action="Details" asp-route-id="@Model.Id">
				<i class="fas fa-list-ul"></i>
			</a>
		}
		<!--<a asp-controller="@Model.ControllerName" class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
		<i class="far fa-trash-alt"></i>
	</a>-->
		<form method="post" asp-action="Delete">
			<input asp-controller="@Model.ControllerName" asp-action="Delete" type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
		</form>
	</div>
</td>